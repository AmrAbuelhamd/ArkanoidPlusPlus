<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/level_select_background" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewLevelChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/level_choose"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewLevelSelect"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:srcCompat="@drawable/no_internet" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="clip_horizontal|center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLevel1"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/custom_button2"
                    android:text="1 level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="#FFFFFF"
                    android:theme="@style/FormButton" />

                <Button
                    android:id="@+id/buttonLevel2"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/custom_button2"
                    android:text="2 level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:theme="@style/FormButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:gravity="clip_horizontal|center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLevel3"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/custom_button3"
                    android:text="3 level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:theme="@style/FormButton" />

                <Button
                    android:id="@+id/buttonLevel4"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/custom_button3"
                    android:text="4 level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:theme="@style/FormButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="clip_horizontal|center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLevel5"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/custom_button4"
                    android:text="5 level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:theme="@style/FormButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLevel6"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/aldrich"
                    android:text="BONUS LEVEL"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:theme="@style/FormButton"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>