<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/level_select_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLevelChoose">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel1"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginRight="16dp"
                android:text="1 level"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel2"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginLeft="16dp"
                android:text="2 level"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel3"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginRight="16dp"
                android:text="3 level"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel4"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginLeft="16dp"
                android:text="4 level"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel5"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginRight="16dp"
                android:text="5 level"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLevel6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginLeft="16dp"
                android:text="BONUS LEVEL"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/FormButton" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewLevelChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/level_choose"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>